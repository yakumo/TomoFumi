<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="ProgressText" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">@color/stream_list_progress_text_color</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="StreamMessage" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/stream_message_text_size</item>
    <item name="android:textColor">@color/stream_message_text_color</item>
  </style>

  <style name="StreamMessageUser" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/stream_message_text_size</item>
    <item name="android:textColor">@color/stream_message_user_text_color</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="StreamSummary" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/stream_summary_text_size</item>
    <item name="android:textColor">@color/stream_summary_text_color</item>
  </style>

  <style name="StreamDescription" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">@dimen/stream_summary_text_size</item>
    <item name="android:textColor">@color/stream_summary_text_color</item>
  </style>

  <style name="StreamComment" parent="@android:style/TextAppearance.Small">
    <item name="android:textSize">@dimen/stream_comment_text_size</item>
    <item name="android:textColor">@color/stream_comment_text_color</item>
  </style>

  <style name="StreamCommentBase" parent="@android:style/TextAppearance.Small">
    <item name="android:background">@drawable/fukidashi</item>
  </style>

  <style name="LinkCheckLabel" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/link_check_title_color</item>
  </style>

  <style name="LinkCheckText" parent="@android:style/TextAppearance.Medium">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/link_check_message_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingBottom">6sp</item>
    <item name="android:paddingLeft">12sp</item>
  </style>
</resources>
